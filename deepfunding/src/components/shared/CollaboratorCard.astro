---
const { imageUrl, role, name, url } = Astro.props;
---

<div
  class="flex flex-col items-center justify-start text-center my-8 h-full relative"
>
  <img
    src={imageUrl}
    loading="lazy"
    alt={`${name} logo`}
    class="h-[120px] w-[120px] mb-4"
  />
  <p
    class="text-[#808782] text-sm leading-6 font-offside relative z-0 mt-2.5 mb-1"
  >
    {role}
  </p>
  <h3
    class="text-[#17301c] font-stencil text-[32px] leading-[40px] font-bold w-full"
  >
    {name}
  </h3>
  <a
    href={url}
    target="_blank"
    rel="noopener noreferrer"
    class="absolute inset-0 w-full h-full z-10 bg-transparent"
    aria-label={`Visit ${name} website`}></a>
</div>
