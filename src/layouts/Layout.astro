---
interface Props {
  title: string;
}

const { title } = Astro.props;
import Navigation from "@/components/shared/Navigation.astro";
import CTA from "@/components/home/CTA.astro";
import Footer from "@/components/shared/Footer.astro";

const siteUrl = "https://www.deepfunding.org/";
const description = "Scaling high quality human judgement";
const image = `${siteUrl}images/banner.png`;
const twitterHandle = "@deep_funding";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.png" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Big+Shoulders+Stencil+Display:wght@700&family=Offside&display=swap"
      rel="stylesheet"
    />
    <meta name="generator" content={Astro.generator} />

    <!-- Open Graph tags -->
    <meta property="og:title" content={title} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={siteUrl} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />
    <meta property="og:image:alt" content="Deep Funding" />

    <!-- Twitter tags -->
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content={twitterHandle} />
    <meta name="twitter:creator" content={twitterHandle} />
    <meta name="twitter:image" content={image} />
    <meta name="twitter:image:alt" content="Deep Funding" />

    <title>{title}</title>
  </head>
  <body class="bg-[#333]">
    <div class="min-h-screen flex flex-col">
      <Navigation />

      <main class="flex-1">
        <slot />
      </main>

      <CTA />

      <Footer />
    </div>
  </body>

  <style is:global>
    @import "../styles/global.css";
  </style>
</html>
